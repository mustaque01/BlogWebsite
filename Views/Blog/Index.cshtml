@model IEnumerable<BlogWebsite.Models.Blog>
@{
    ViewData["Title"] = "All Blogs";
}

<h1>All Blogs</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Create New Blog</a>
@if (!Model.Any())
{
    <div class="alert alert-info">No blogs yet.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var blog in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-text text-truncate" style="max-height:4.5em">@blog.Content</p>
                        <div class="mt-auto small text-muted">
                            @if(blog.Author != null){
                                <span>by @blog.Author.UserName</span>
                            }
                            <span class="ms-2">@blog.CreatedAt.ToLocalTime().ToString("g")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
